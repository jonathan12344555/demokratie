  <script>
    // Navigation
    function showSection(id) {
      document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
      document.getElementById(id).classList.add('active');
    }

    // Quiz
    const quizData = [
      { question: "Wie hei√üt das √∂sterreichische Parlament?", options: ["Reichstag", "Nationalrat", "Volksrat"], correct: 1 },
      { question: "Wer ist das Staatsoberhaupt in √ñsterreich?", options: ["Bundespr√§sident", "Bundeskanzler", "Bundesrat"], correct: 0 },
      { question: "Wie lange dauert die Amtszeit des Bundespr√§sidenten?", options: ["4 Jahre", "6 Jahre", "10 Jahre"], correct: 1 },
      { question: "Ab welchem Alter darf man in √ñsterreich Nationalratswahlen w√§hlen?", options: ["16", "18", "21"], correct: 0 },
      { question: "Wie viele Mitglieder hat der Nationalrat?", options: ["183", "200", "150"], correct: 0 },
      { question: "Welches Gesetz bildet die Grundlage der Demokratie in √ñsterreich?", options: ["Bundes-Verfassungsgesetz (B-VG)", "Staatsvertrag", "Grundgesetz"], correct: 0 },
      { question: "Wann trat √ñsterreich der EU bei?", options: ["1995", "2000", "1990"], correct: 0 },
      { question: "Wie hei√üt die zweite Kammer des Parlaments?", options: ["Senat", "Bundesrat", "St√§nderat"], correct: 1 },
      { question: "Wie wird ein Gesetz in √ñsterreich beschlossen?", options: ["Nur durch den Bundespr√§sidenten", "Durch Nationalrat, Bundesrat & Ver√∂ffentlichung", "Durch Volksabstimmung"], correct: 1 },
      { question: "Welches Instrument ist KEINE direkte Demokratie in √ñsterreich?", options: ["Volksbegehren", "Volksabstimmung", "Kaiserliches Dekret"], correct: 2 },
      { question: "Wie hei√üt das Geb√§ude, in dem das Parlament tagt?", options: ["Bundeshaus", "Parlamentsgeb√§ude Wien", "Hofburg"], correct: 1 },
      { question: "Wer w√§hlt den Bundeskanzler?", options: ["Bundespr√§sident", "Das Volk direkt", "Der Nationalrat"], correct: 0 },
      { question: "In welcher Stadt tagt das √∂sterreichische Parlament?", options: ["Wien", "Salzburg", "Graz"], correct: 0 },
      { question: "Welches Land ist KEIN Nachbar √ñsterreichs?", options: ["Deutschland", "Ungarn", "Polen"], correct: 2 },
      { question: "Was ist ein Misstrauensvotum?", options: ["Vertrauensbeweis", "Abwahl durch den Nationalrat", "Abwahl durch das Volk"], correct: 1 }
    ];
    let currentQuestion = 0, score = 0;

    function loadQuestion() {
      const container = document.querySelector('.quiz-container');
      if (currentQuestion < quizData.length) {
        const q = quizData[currentQuestion];
        container.innerHTML = `
          <p><strong>Frage ${currentQuestion+1} von ${quizData.length}:</strong> ${q.question}</p>
          ${q.options.map((opt,i)=>`<button class="button" onclick="checkAnswer(${i})">${String.fromCharCode(65+i)}) ${opt}</button>`).join('')}
          <p id="quiz-result"></p>`;
        updateProgress();
      } else {
        container.innerHTML = `<h3>üéâ Quiz beendet!</h3><p>Du hast <strong>${score} von ${quizData.length}</strong> Fragen richtig beantwortet.</p>`;
        document.querySelector('.progress-bar').style.width = "100%";
      }
    }
    function checkAnswer(answer) {
      const q = quizData[currentQuestion];
      const result = document.getElementById('quiz-result');
      if (answer === q.correct) { result.textContent="‚úÖ Richtig!"; result.style.color="#00ff88"; score++; }
      else { result.textContent="‚ùå Falsch."; result.style.color="#ff4444"; }
      setTimeout(()=>{ currentQuestion++; loadQuestion(); },1000);
    }
    function updateProgress() {
      const percent = (currentQuestion / quizData.length) * 100;
      document.querySelector('.progress-bar').style.width = percent+"%";
    }

    // Fakten
    const facts = [
      "√ñsterreich ist seit 1918 eine Republik.",
      "Das Bundes-Verfassungsgesetz (B-VG) regelt die Demokratie in √ñsterreich.",
      "Das Wahlalter f√ºr den Nationalrat liegt seit 2007 bei 16 Jahren.",
      "Der Nationalrat besteht aus 183 Abgeordneten.",
      "Der Bundespr√§sident wird direkt vom Volk gew√§hlt.",
      "√ñsterreich trat 1995 der Europ√§ischen Union bei.",
      "Die erste Republik √ñsterreich entstand 1918.",
      "Die zweite Republik begann 1945 nach dem Zweiten Weltkrieg.",
      "Das Parlamentsgeb√§ude in Wien wurde im 19. Jahrhundert erbaut.",
      "Volksbegehren k√∂nnen von B√ºrger*innen gestartet werden.",
      "Eine Volksabstimmung ist bei Verfassungs√§nderungen verpflichtend.",
      "Der Bundesrat vertritt die Bundesl√§nder.",
      "Das Misstrauensvotum ist ein wichtiges Kontrollinstrument des Nationalrats.",
      "Die Sozialpartnerschaft ist ein besonderes Merkmal der √∂sterreichischen Politik.",
      "√ñsterreich ist eine f√∂derale Republik mit 9 Bundesl√§ndern."
    ];
    function showFact() {
      document.getElementById('fact').textContent = facts[Math.floor(Math.random()*facts.length)];
    }

    // Memory
    const symbols = ["üó≥Ô∏è","üìú","‚öñÔ∏è","üïäÔ∏è","üó£Ô∏è","üèõÔ∏è"];
    let cards = [...symbols, ...symbols].sort(() => 0.5 - Math.random());
    let flipped = [], matchedCount = 0;
    function renderMemory() {
      const grid = document.getElementById('memory-grid');
      grid.innerHTML = '';
      cards.forEach((symbol,i)=>{
        const card=document.createElement('div');
        card.className='card';
        card.innerHTML=`<span>${symbol}</span>`;
        card.onclick=()=>flipCard(card,symbol);
        grid.appendChild(card);
      });
    }
    function flipCard(card,symbol) {
      if(card.classList.contains('flipped')||card.classList.contains('matched')) return;
      if(flipped.length===2) return;
      card.classList.add('flipped'); flipped.push(card);
      if(flipped.length===2) setTimeout(checkMatch,600);
    }
    function checkMatch() {
      const[c1,c2]=flipped;
      if(c1.innerText===c2.innerText){
        c1.classList.add('matched'); c2.classList.add('matched'); matchedCount++;
        if(matchedCount===symbols.length) document.getElementById('memory-result').textContent="üéâ Alle Paare gefunden!";
      } else { c1.classList.remove('flipped'); c2.classList.remove('flipped'); }
      flipped=[];
    }

    // Timeline
    const timelineEvents = [
      {text:"1918: Erste Republik √ñsterreich", year:1918},
      {text:"1938: Anschluss an Deutschland", year:1938},
      {text:"1945: Zweite Republik", year:1945},
      {text:"1995: EU-Beitritt √ñsterreichs", year:1995}
    ];
    function renderTimeline() {
      const container=document.getElementById('timeline-items');
      container.innerHTML='';
      const shuffled=[...timelineEvents].sort(()=>0.5-Math.random());
      shuffled.forEach(ev=>{
        const div=document.createElement('div');
        div.className='timeline-item';
        div.draggable=true;
        div.textContent=ev.text;
        div.dataset.year=ev.year;
        div.ondragstart=e=>{e.dataTransfer.setData('text/plain',ev.year)};
        container.appendChild(div);
      });
      container.ondragover=e=>e.preventDefault();
      container.ondrop=e=>{
        e.preventDefault();
        const year=e.dataTransfer.getData('text/plain');
        const dragged=document.querySelector(`.timeline-item[data-year='${year}']`);
        if(e.target.classList.contains('timeline-item')){
          container.insertBefore(dragged,e.target.nextSibling);
        } else {
          container.appendChild(dragged);
        }
      };
    }
    function checkTimeline() {
      const items=[...document.querySelectorAll('#timeline-items .timeline-item')];
      const years=items.map(i=>+i.dataset.year);
      const sorted=[...years].sort((a,b)=>a-b);
      document.getElementById('timeline-result').textContent=(JSON.stringify(years)===JSON.stringify(sorted))?"‚úÖ Richtig geordnet!":"‚ùå Falsch, versuch es nochmal.";
    }

    window.onload=()=>{loadQuestion();renderMemory();renderTimeline();};
  </script>
</body>
